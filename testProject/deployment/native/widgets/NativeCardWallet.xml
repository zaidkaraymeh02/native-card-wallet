<?xml version="1.0" encoding="utf-8"?>
<widget id="khaleeji.nativecardwallet.NativeCardWallet" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Native Card Wallet</name>
    <description>This widget will handle displaying a list of cards with animations similar what Apple did with Apple Wallet</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <property key="yourName" type="string" required="false">
                <caption>Name</caption>
                <description>Enter your name</description>
            </property>
            <property key="cardImage" type="image" required="false">
                <caption>Background Image</caption>
                <description>Image shown blurred in a background</description>
            </property>
            <property key="content" type="widgets" required="false">
                <caption>Content</caption>
                <description>Content of a box</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Cards">
            <property key="infiniteCard" type="image" required="false">
                <caption>Infinite Credit Card</caption>
                <description />
            </property>
            <property key="platinumCard" type="image" required="false">
                <caption>Platinum Credit Card</caption>
                <description />
            </property>
            <property key="goldCard" type="image" required="false">
                <caption>Gold Credit Card</caption>
                <description />
            </property>
            <property key="classicCard" type="image" required="false">
                <caption>Classic Credit Card</caption>
                <description />
            </property>
            <property key="normalDebitCard" type="image" required="false">
                <caption>Normal Debit Card</caption>
                <description />
            </property>
            <property key="vipDebitCard" type="image" required="false">
                <caption>VIP Debit Card</caption>
                <description />
            </property>
        </propertyGroup>
        <propertyGroup caption="Datasource">
            <property key="data" type="datasource" isList="true" required="false">
                <caption>Card List</caption>
                <description >Cards to be displayed</description>
            </property>
            <property key="cardContext" type="datasource" isList="true" required="false">
                <caption>Card Context</caption>
                <description />
            </property>
        </propertyGroup>
        <propertyGroup caption="Events">
            <property key="buttonAction" type="action">
                <caption>On click</caption>
                <description>Action to be performed when button is clicked</description>
            </property>
        </propertyGroup>
        
    </properties>
</widget>
